<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="haina.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HainaECommerce.Light">
        <activity android:name=".view.webview.WebViewActivity"/>

        <service
            android:name=".fcm.NotifInstanceService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".view.register.RegisterActivity" />
        <activity
            android:name=".view.login.LoginActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.other.OtherActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.splashscreen.SplashScreenActivity"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="nosensor" />
    </application>

</manifest>