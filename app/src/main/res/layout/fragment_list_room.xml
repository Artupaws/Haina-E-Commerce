<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.hotels.listroom.ListRoomFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_list_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        app:title="Rooms"
        app:navigationIcon="@drawable/ic_back_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_list_room">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ps5"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Hotel Borobudur"
                    style="@style/TextView.Poppins16spBlack"/>

                <RatingBar
                    android:id="@+id/rating_bar_hotel"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="5"
                    android:theme="@style/RatingBar" />

                <TextView
                    android:id="@+id/tv_address_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    tools:text="Jl. Yos Sudarso 11, East Java,,Surabaya"
                    style="@style/TextView.Poppins14spBlack"/>

                <LinearLayout
                    android:id="@+id/linea_description_hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Description Hotel"
                        style="@style/TextView.Poppins14spBlack"/>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="20dp"
                        android:layout_weight="1"
                        tools:ignore="RtlSymmetry">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_dropdown"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:visibility="invisible"
                            android:src="@drawable/ic_arrow_up"/>

                    </FrameLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_description_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="The 4-star Garden Palace Hotel offers comfort and convenience whether you're on business or holiday in Surabaya. The property features a wide range of facilities to make your stay a pleasant experience. 24-hour room service, free Wi-Fi in all rooms, 24-hour front desk, Wi-Fi in public areas, valet parking are just some of the facilities on offer. Designed for comfort, selected guestrooms offer towels, slippers, television LCD/plasma screen, mirror, internet access â€“ wireless to ensure a restful night. To enhance guests' stay, the hotel offers recreational facilities such as fitness center, sauna, massage. No matter what your reasons are for visiting Surabaya, Garden Palace Hotel will make you feel instantly at home."
                    style="@style/TextView.Poppins12spGrey"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>