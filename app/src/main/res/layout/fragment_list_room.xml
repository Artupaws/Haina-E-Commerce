<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.hotels.listroom.ListRoomFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">


                    <View
                        android:layout_height="200dp"
                        android:layout_width="match_parent"
                        android:background="@color/gray_shimmer"></View>

                </com.facebook.shimmer.ShimmerFrameLayout>
                <ImageView
                    android:id="@+id/iv_hotel"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Hotel Borobudur"
                    style="@style/TextView.Poppins16spBlack"/>

                <RatingBar
                    android:id="@+id/rating_bar_hotel"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="5"
                    android:theme="@style/RatingBar" />

                <TextView
                    android:id="@+id/tv_address_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    tools:text="Jl. Yos Sudarso 11, East Java,,Surabaya"
                    style="@style/TextView.Poppins14spBlack"/>

                <LinearLayout
                    android:id="@+id/linear_description_hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Description Hotel"
                        style="@style/TextView.Poppins14spBlack"/>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="20dp"
                        android:layout_weight="1"
                        tools:ignore="RtlSymmetry">

                        <ImageView
                            android:id="@+id/iv_dropdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_dropdown"/>

                    </FrameLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_description_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:text="The 4-star Garden Palace Hotel offers comfort and convenience whether you're on business or holiday in Surabaya. The property features a wide range of facilities to make your stay a pleasant experience. 24-hour room service, free Wi-Fi in all rooms, 24-hour front desk, Wi-Fi in public areas, valet parking are just some of the facilities on offer. Designed for comfort, selected guestrooms offer towels, slippers, television LCD/plasma screen, mirror, internet access â€“ wireless to ensure a restful night. To enhance guests' stay, the hotel offers recreational facilities such as fitness center, sauna, massage. No matter what your reasons are for visiting Surabaya, Garden Palace Hotel will make you feel instantly at home."
                    style="@style/TextView.Poppins12spGrey"
                    android:textColor="@color/black"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_title_common_facilities"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TextView.Poppins14spBlack"
                        android:text="Common Facilities"/>

                    <TextView
                        android:id="@+id/tv_see_all_facilites"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        style="@style/TextView.Poppins14spBlack"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/see_all_facilities"/>

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_common_facilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/list_item_facilities_hotel"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_room_darma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                tools:listitem="@layout/list_item_room_darma"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:id="@+id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="12dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_back_black">

    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>