<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linear_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_resume" />

            <TextView
                android:id="@+id/tv_title_notification"
                style="@style/TextView.Poppins14spBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_date_notification"
                android:layout_toRightOf="@id/iv_icon_notification"
                android:ellipsize="end"
                tools:text="TITLE NOTIFICATION" />

            <TextView
                android:id="@+id/tv_date_notification"
                style="@style/TextView.Poppins12spGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                tools:text="21-1-21" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_description_notification"
            style="@style/TextView.Poppins12spGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="asjdljaskdhkashfkhsakdhkashdkahskjdhaksjfhjksahkjdhajksaklsjdklasklkalsjdklajsldjalsdjklasjdlkasjldkjaklsdjaklsdjlaksjlla" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"

            android:background="@color/black" />

    </LinearLayout>

</RelativeLayout>