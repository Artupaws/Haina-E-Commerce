<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8DFDDB3A"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1.8">
                <ImageView
                    android:id="@+id/iv_icon_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_resume"/>
                <TextView
                    android:id="@+id/tv_category_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    style="@style/TextView.Poppins12spGrey"
                    tools:text="Job"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/dash_line"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_date_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    style="@style/TextView.Poppins12spGrey"
                    tools:text="21-1-21"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1.2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black_60">

                    <TextView
                        android:id="@+id/tv_notification_for"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/yellow"
                        style="@style/TextView.Poppins14spBlack"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_centerInParent="true"
                        tools:text="for company"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TITLE NOTIFICATION"
            android:ellipsize="end"
            style="@style/TextView.Poppins14spBlack"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_description_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="asjdljaskdhkashfkhsakdhkashdkahskjdhaksjfhjksahkjdhajksaklsjdklasklkalsjdklajsldjalsdjklasjdlkasjldkjaklsdjaklsdjlaksjlla"
            android:maxLines="2"
            android:ellipsize="end"
            style="@style/TextView.Poppins12spGrey"
            android:layout_marginTop="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</RelativeLayout>