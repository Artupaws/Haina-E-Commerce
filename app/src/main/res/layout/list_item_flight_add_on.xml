<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/tv_idcard_number"
    app:layout_constraintTop_toBottomOf="@+id/tv_idcard_number">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardBackgroundColor="@color/broken_white"
        app:cardCornerRadius="10dp"
        android:focusable="true">
    <LinearLayout
        android:id="@+id/linear_flight_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ps5" />

                <TextView
                    android:id="@+id/tv_airline_code"
                    style="@style/TextView.Poppins12spGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    tools:text="QG-123421" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_type_flight"
                style="@style/TextView.Poppins16spBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textAllCaps="true"
                tools:text="FLIGHT 1" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_origin_destination"
            style="@style/TextView.Poppins14spBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            tools:text="CGK - SUB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date_flight"
                style="@style/TextView.Poppins14spBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                tools:text="2021-06-30" />

            <TextView
                android:id="@+id/tv_time_flight"
                style="@style/TextView.Poppins14spBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textAllCaps="true"
                tools:text="(04.00 - 05.00)" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal"
            tools:ignore="SmallSp">

            <Button
                android:id="@+id/btn_choose_baggage"
                style="@style/Button.Primary"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:text="baggage"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_add_on_baggage"
                style="@style/TextView.Poppins12spGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                tools:text="36b" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_baggage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="SmallSp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Baggage"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spn_baggage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@android:layout/simple_spinner_dropdown_item" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_addons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="SmallSp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Addons"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <Button
                    android:id="@+id/btn_add_on"
                    style="@style/Button.Primary"
                    android:layout_width="110dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="35dp"
                    android:text="Add Addons"
                    android:textSize="10sp" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            tools:ignore="SmallSp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text=" "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_selected_addons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">ine

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_choose_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="SmallSp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Seat"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_choose_seat"
                style="@style/Button.Primary"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:text="Choose Seat"
                android:textSize="10sp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_selected_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            tools:ignore="SmallSp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text=" "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_selected_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="5dp"
                    android:layout_alignParentStart="true"
                    style="@style/TextView.Poppins14spBlack"></TextView>

                <TextView
                    android:id="@+id/tv_seat_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="5dp"
                    android:layout_alignParentEnd="true"
                    style="@style/TextView.Poppins14spBlack"></TextView>
            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="#aaaaaa"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/layout_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            tools:ignore="SmallSp">

            <TextView
                android:id="@+id/tv_flight_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 150.000"
                style="@style/TextView.Poppins16spBlack"
                android:textColor="@color/black" />


        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>