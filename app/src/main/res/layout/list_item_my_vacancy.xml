<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/background_line_corner_input_text_black"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linear_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_position_job"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            style="@style/TextView.Poppins14spBlack"
            android:textFontWeight="600"
            tools:text="Android Developer"/>

        <TextView
            android:id="@+id/tv_package_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            style="@style/TextView.Poppins12spGrey"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/yellow"
            android:background="@color/black"
            tools:text="FREE"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            style="@style/TextView.Poppins12spGrey"
            android:textAlignment="center"
            android:padding="5dp"
            android:textAllCaps="true"
            android:text="@string/dash_line"/>

        <TextView
            android:id="@+id/tv_status_vacancy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textAlignment="center"
            style="@style/TextView.Poppins12spGrey"
            android:padding="5dp"
            android:textAllCaps="true"
            tools:text="active"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_date_end"
        style="@style/TextView.Poppins14spGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_title"
        tools:text="Date End 21 Aug 2021" />

    <TextView
        android:id="@+id/tv_salary"
        style="@style/TextView.Poppins14spGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date_end"
        tools:text="IDR10.000.0000 - IDR15.000.000" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_data_apply"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_salary"
        android:background="@drawable/background_line_corner_input_text_black"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/linear_apply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintEnd_toStartOf="@+id/view5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_apply"
                style="@style/TextView.Poppins14spBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="600"
                tools:text="154" />

            <TextView
                style="@style/TextView.Poppins12spGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply" />

        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/linear_choosed"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/linear_apply" />


        <LinearLayout
            android:id="@+id/linear_choosed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintEnd_toStartOf="@+id/view6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view5">

            <TextView
                android:id="@+id/tv_choosed"
                style="@style/TextView.Poppins14spBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="600"
                tools:text="154" />

            <TextView
                style="@style/TextView.Poppins12spGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choosed" />
        </LinearLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/linear_interview"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/linear_choosed" />


        <LinearLayout
            android:id="@+id/linear_interview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view6">

            <TextView
                android:id="@+id/tv_interview"
                style="@style/TextView.Poppins14spBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="600"
                tools:text="154" />

            <TextView
                style="@style/TextView.Poppins12spGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interview" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_show_again"
        style="@style/Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/cl_data_apply"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="show again"
        android:visibility="gone"
        tools:visibility="visible" />


</RelativeLayout>