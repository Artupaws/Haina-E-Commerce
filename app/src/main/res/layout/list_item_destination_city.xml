<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name_city_and_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextView.Poppins14spBlack"
        android:textStyle="bold"
        tools:text="Yogyakarta, Indonesia" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_city_and_country"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_code_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Poppins14spGrey"
            tools:text="JOG"/>

        <TextView
            android:id="@+id/tv_name_airpot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Poppins14spGrey"
            tools:text=" - Adisutjipto"/>
    </LinearLayout>



</RelativeLayout>