<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_line_corner_input_text_black"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_name_applicant"
            style="@style/TextView.Poppins14spBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Darla" />

        <TextView
            android:id="@+id/tv_last_position"
            style="@style/TextView.Poppins14spBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Android Developer" />

        <TextView
            android:id="@+id/tv_last_company_and_experience"
            style="@style/TextView.Poppins14spGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="PT Maju (1 Year)" />

        <TextView
            android:id="@+id/tv_expected_salary"
            style="@style/TextView.Poppins14spBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Expected Salary : IDR10.000.000" />

        <TextView
            android:id="@+id/tv_last_education"
            style="@style/TextView.Poppins14spBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Last Education : S1(Tenknik Informatika)" />


        <LinearLayout
            android:id="@+id/linear_button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_interview"
                style="@style/Button.Primary"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/interview" />

            <Button
                android:id="@+id/btn_shortlisted"
                style="@style/Button.Primary"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/short_list" />

            <Button
                android:id="@+id/btn_reject"
                style="@style/Button.Primary"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="reject"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_interview_shortlisted"
                style="@style/Button.Primary"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/interview" />

            <Button
                android:id="@+id/btn_reject_shortlisted"
                style="@style/Button.Primary"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="reject"
                android:textColor="@color/white" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_button_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_invite_interview"
                style="@style/Button.Primary"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Invite Interview" />

            <Button
                android:id="@+id/btn_reject_interview"
                style="@style/Button.Primary"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="reject"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>