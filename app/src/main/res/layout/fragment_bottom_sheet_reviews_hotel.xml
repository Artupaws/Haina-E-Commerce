<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BottomSheetHowToPayment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.hotels.listreviews.BottomSheetReviewsHotel">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_reviews_hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reviews_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_reviews_hotel"
        tools:listitem="@layout/list_item_review_hotel" />
</RelativeLayout>