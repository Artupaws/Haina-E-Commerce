<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_click"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:id="@+id/linear_category"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image_category"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            tools:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/tv_title_category"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:textSize="10sp"
            android:layout_marginHorizontal="10dp"
            tools:text="@string/category_job"
            tools:ignore="SmallSp" />
        <View
            android:id="@+id/view_selected"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black_60"></View>

    </LinearLayout>


</LinearLayout>