<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.forum.ForumFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_fragment_forum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_fragment_forum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/TextView.Poppins16spBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forum"
                android:textFontWeight="600"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_add"
                app:tint="@color/yellow" />
        </LinearLayout>


    </com.google.android.material.appbar.MaterialToolbar>


    <ImageView
        android:id="@+id/iv_action_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_search"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_fragment_forum"
        app:layout_constraintEnd_toStartOf="@+id/iv_action_activity_forum"
        app:layout_constraintTop_toTopOf="@+id/toolbar_fragment_forum" />

    <ImageView
        android:id="@+id/iv_action_activity_forum"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_account"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_fragment_forum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_transaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/broken_white"
        app:tabMode="scrollable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_fragment_forum" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_transaction">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_transaction"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/include_login"
            layout="@layout/layout_not_login" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>