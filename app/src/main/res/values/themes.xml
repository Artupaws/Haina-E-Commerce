<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HainaECommerce.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ToolbarTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyleMenuService" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Myslider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/My_Tooltip</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="My_Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/yellow</item>
    </style>

    <style name="SmallTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomSheetHowToPayment" parent="Theme.Design.BottomSheetDialog">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="RangeDatePicker" parent="Theme.MaterialComponents.Light">
        <item name="materialCalendarFullscreenTheme">@style/CustomThemeOverlay_MaterialCalendar_Fullscreen</item>
    </style>

    <style name="CustomThemeOverlay_MaterialCalendar_Fullscreen"
        parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar.Fullscreen</item>
    </style>

    <style name="Custom_MaterialCalendar.Fullscreen"
        parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="RatingBar">
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>
    
    <style name="Button"/>
    <style name="Button.Primary">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@drawable/background_button_yellow</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.StateFollow">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/background_state_follow</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Secondary">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@drawable/background_button_secondary</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/yellow</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Cancel">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@android:color/holo_red_dark</item>
        <item name="android:backgroundTint">@android:color/holo_red_dark</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextView"/>
    <style name="TextView.Poppins12spGrey">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Poppins16spBlack">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.Poppins14spBlack">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Poppins14spGrey">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="thumbTint">@color/yellow</item>
        <item name="trackColor">@color/black</item>
        <item name="activeThumbColor">@color/yellow</item>
        <item name="thumbRadius">5dp</item>
    </style>

    <style name="hideUnderBar" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>
</resources>